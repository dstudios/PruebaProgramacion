@model TestCoppel.Core.Data.Models.Comentario

<h2>Producto</h2>

@using (Html.BeginForm("SaveItem", "Comentario"))
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(model => model.ComentarioID)
	@Html.Hidden("usuarioId", Model.Usuario.UsuarioID)

	<div class="form-group row">
		@Html.LabelFor(model => model.ComentarioID, htmlAttributes: new { @class = "col-form-label col-md-3" })
		<div class="col-md-9">
			@Html.DisplayFor(model => model.ComentarioID)
		</div>
	</div>
	<div class="form-group row">
		@Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "col-form-label col-md-3" })
		<div class="col-md-9">
			@Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
		</div>
	</div>
	<div class="form-group row justify-content-end">
		<button type="submit" class="btn btn-success">Guardar</button>
		@Html.ActionLink("Cancelar", "Index", "Comentario", new { usuarioId = Model.Usuario.UsuarioID }, new { @class = "btn btn-danger" })
	</div>
}
