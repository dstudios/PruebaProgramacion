@model TestCoppel.Core.Data.Models.Producto

<h2>Producto</h2>

@using (Html.BeginForm("SaveItem", "Producto"))
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(model => model.ProductoID)

	<div class="form-group row">
		@Html.LabelFor(model => model.ProductoID, htmlAttributes: new { @class = "col-form-label col-md-3" })
		<div class="col-md-9">
			@Html.DisplayFor(model => model.ProductoID)
		</div>
	</div>
	<div class="form-group row">
		@Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-form-label col-md-3" })
		<div class="col-md-9">
			@Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
		</div>
	</div>
	<div class="form-group row justify-content-end">
		<button type="submit" class="btn btn-success">Guardar</button>
		@Html.ActionLink("Cancelar", "Index", "Producto", null, new { @class = "btn btn-danger" })
	</div>
}
